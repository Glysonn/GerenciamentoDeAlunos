@model dotnetmvc.Models.Aluno

@{
    ViewData["Title"] = "Atualizar";
}

<h1>Atualizar dados do aluno</h1>

<hr/>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Atualizar" asp-route-Matricula="@Model.Matricula">
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Sobrenome" class="control-label"></label>
                <input asp-for="Sobrenome" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="DataNascimento" class="control-label">Data de Nascimento</label>
                <input type="date" asp-for="DataNascimento" class="form-control" />
            </div>
            <br>
            <div class="form-group">
                <label asp-for="Ativo" class="control-label"></label>
                <input type="checkbox" asp-for="Ativo" class="form-check-input" />
            </div>
            <br><br>
            <div class="form-group">
                <input type="submit" value="Atualizar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>